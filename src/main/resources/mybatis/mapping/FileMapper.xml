<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="zuo.li.play.dao.FileDao">
    <!-- 获取文件列表 -->
    <select id="getFileList" parameterType="zuo.li.play.core.bo.FileBO" resultType="zuo.li.play.core.vo.FileVO">
        SELECT
        id,
        file_type,
        file_name,
        file_url,
        create_time
        FROM
        t_upload_file
        limit #{offset},#{pageSize}
    </select>
    <!-- 获取文件数量 -->
    <select id="countFile" parameterType="zuo.li.play.core.bo.FileBO" resultType="java.lang.Long">
        SELECT
        count(*)
        FROM
        t_upload_file
    </select>
</mapper>
